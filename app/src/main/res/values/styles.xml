<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar"> <!-- recently I add '.NoActionBar' -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red3</item>
        <item name="colorAccent">@color/red3</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red3</item>
    </style>

    <style name="MyDialogTheme" parent="CustomAlertDialogTheme">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="shape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/red3</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- not used -->
    <style name="TextInputLayoutLabelGrey" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/red3</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>

    </style>

    <style name="NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red3</item>
        <item name="android:textColor">@color/red3</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red3</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="FillButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/red3</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="editText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="firstInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColorHint">@color/design_default_color_on_secondary</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/error_color</item>
        <item name="errorTextColor">@color/error_color</item>
    </style>

    <style name="autoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="layoutDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="endIconTint">@android:color/black</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorIconTint">@color/error_color</item>
        <item name="errorTextColor">@color/error_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="smallFillButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.background" parent="Theme.MaterialComponents">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.coverBackground" parent="Theme.MaterialComponents">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/red3</item>
    </style>

    <style name="TitleFormat" parent="Theme.MaterialComponents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@color/red3</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="subtitleFormat" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@color/red3</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="normalText" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="title2" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@color/red3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="subtitleFormat2" parent="Theme.MaterialComponents">
    <item name="android:fontFamily">@font/ralewayregular</item>
    <item name="android:textColor">@color/red3</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15dp</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:layout_marginLeft">15dp</item>
    <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="textFormat2" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="imageViewStyle" parent="Theme.MaterialComponents">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
